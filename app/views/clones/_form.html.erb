<%= form_with(model: @clone, local: true, url: choose_new_or_edit) do |form| %>
  <% if @clone.errors.any? %>
    <div id="error_explanation">
      <h2><%= @clone.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @clone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="clone_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="subbtn">
    <%= form.submit %>
  </div>
<% end %>

<div class="btn">
  
<%= link_to "back", clones_path %>
</div>